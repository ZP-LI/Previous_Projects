<launch>

  <node pkg="octomap_server" type="octomap_server_node" name="octomap_server">
		<param name="resolution" value="0.05" />
		
		<!-- fixed map frame (set to 'map' if SLAM or localization running!) -->
		<param name="frame_id" type="string" value="world" />
		
		<!--param name="base_frame_id" type="string" value="body" /-->
		
		<param name = "pointcloud_min_z" type = "double" value = "0.10" />
	
		<!--param name = "filter_ground" type = "bool" value = "true" /--> 
		<!--param name = "ground_filter/distance" type = "double" value = "0.05" /-->
		
		<!--Distance threshold for points (in z direction) to be segmented to the ground plane /-->
		<!--param name = "ground_filter/plane_distance" type = "double" value = "0.3" /-->
		<!--Distance threshold from z=0 for a plane to be detected as ground (4th coefficient of the plane equation from PCL) /-->
			
		<!-- maximum range to integrate (speedup!) -->
		<param name="sensor_model/max_range" value="5" />
		
		<!-- data source to integrate (PointCloud2) -->
		<remap from="/cloud_in" to="/realsense/depth/pointcloud" />
	
  
  </node>
  
<!--node pkg="rviz" type="rviz" name="rviz" args="-d $(find simulation)/rviz/Octomap.rviz" /-->
		
</launch>
